<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.photon.phresco.eshop.models.UserHBM"	table="eshop_users">
		<meta attribute="class-description">
			This class contains the Product details.
	    </meta>
		<id name="userId" type="integer" column="user_id">
			<generator class="increment" />
		</id>
		<property name="userName" type="string" column="user_name" />
		<property name="userPassword" type="string" column="user_password" />
		<property name="userRegDate" type="date" column="user_regdate" />
		<property name="userLastLogin" type="date" column="user_last_login" />
	</class>

</hibernate-mapping>